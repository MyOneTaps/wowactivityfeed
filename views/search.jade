extends layout

block content
  .container
    .offset-by-three
      .search_box
        .ten.columns
          input(type='text', placeholder='Search for character or guild')

          select
            option [select realm]
            if realms
              each r in realms
                option #{r.name} (#{r.region})

          button(onclick='$(".top_slider").hide();$(".search_results").show();') Search

