extends layout

block content
  link(rel='stylesheet', href='/stylesheets/home.css')
  .container
    .info_slides
      .container
        .sixteen.columns
          | Slideshow - menu on the left, content on the right
      .container
        .four.columns
          .info_options
            ul
              li example usages, 
              li info/stats on actual usage, 
              li recent character updates
        .twelve.columns
          .info_main
            | CONTENT

  .container
    .search_box
      .offset-by-four
        .three.columns
          input(type='text')
        .four.columns
          select
            option Darkspear(EU)
            option Darkspear(US)
            option Darkspear(CN)
        .one.column
          button Search

  .search_results
    .container
      .offset-by-four
        .three.columns
          | Results:
    .container
      .offset-by-four
        .ten.columns
          ul
            li 1) Mean Girls - Guild (Darkspear/EU) [
              a(href='') rss
              | ]
            li 2) Innoxera - Character (Darkspear/EU) [
              a(href='') rss
              | ]
