extends layout_new

block content
  link(rel='stylesheet', href='/stylesheets/home.css')
  link(rel='stylesheet', href='/stylesheets/fonts.css')

  .container
    .offset-by-three
      .ten.columns
        h3.bordered World of Warcraft Feed

  .container
    .search_box
      .offset-by-four
        .eight.columns
          input(type='text', style='width:100%; float:right')

  .container
    .search_box
      .offset-by-four
        .eight.columns
          select(style='float:right')
            option Darkspear(EU)
            option Darkspear(US)
            option Darkspear(CN)

  .container
    .search_box
      .offset-by-four
        .eight.columns
          button(style='float:right') Search

  .search_results
    .container
      .offset-by-four
        .three.columns
          | Results:
    .container
      .offset-by-four
        .ten.columns
          ol
            li Mean Girls - Guild (Darkspear/EU) [
              a(href='') rss
              | ]
            li Innoxera - Character (Darkspear/EU) [
              a(href='') rss
              | ]
