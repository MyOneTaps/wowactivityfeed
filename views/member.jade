extends layout

block content
  .container
    h3.bordered #{p.region} / #{p.realm} / member: #{w.name}, level: #{w.armory.level}
    div History available: #{h.length}
    if w.armory.guild 
      div 
        | Guild: 
        a(href='/view/guild/#{w.region}/#{w.realm}/#{w.armory.guild.name}')= w.armory.guild.name 
    div
      | &nbsp;View : 
      a(href='http://#{p.region}.battle.net/wow/en/character/#{escape(p.realm)}/#{escape(p.name)}/simple') armory
      &nbsp;-&nbsp;
      a(href='http://#{p.region}.battle.net/api/wow/character/#{escape(p.realm)}/#{escape(p.name)}?fields=achievements,guild,feed,hunterPets,professions,progression,pvp,quests,reputation,stats,talents,titles,items,pets,petSlots,mounts') api
      &nbsp;-&nbsp;
      a(href='/feed/#{w.type}/#{escape(w.region)}/#{escape(w.realm)}/#{escape(w.name)}.rss') rss
    hr
    each item in f
      .clear
      div
        h5 #{item.title}
        div !{item.description}
        span #{item.date_formatted}
        span 
          a(href='#{item.url}') link
    hr
    //if w.armory
    //  #{JSON.stringify(w.armory)}
    each hist in h
      div CHANGE: #{fmtdate(hist.lastModified)} : #{JSON.stringify(hist.whats_changed)}
    hr
    // #{JSON.stringify(w)} 