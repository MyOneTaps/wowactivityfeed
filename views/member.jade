extends layout

block content
  .container
    h3.bordered #{p.region} / #{p.realm} / member: #{w.name}, level: #{w.armory.level}
    div History available: #{h.length}
    if w.armory.guild 
      div 
        | Guild: 
        a(href='/view/guild/#{w.region}/#{w.realm}/#{w.armory.guild.name}')= w.armory.guild.name 
        | &nbsp;View : 
        a(href='http://#{p.region}.battle.net/wow/en/character/#{p.realm}/#{p.name}/simple') armory
        &nbsp;-&nbsp;
        a(href='http://#{p.region}.battle.net/api/wow/character/#{p.realm}/#{p.name}?fields=achievements,guild,feed,hunterPets,professions,progression,pvp,quests,reputation,stats,talents,titles,items') api
        &nbsp;-&nbsp;
        a(href='/feed/#{w.type}/#{w.region}/#{w.realm}/#{w.name}.rss') rss
    hr
    each item in f
      .clear
      div
        h5 #{item.title}
        div !{item.description}
        span #{item.date_formatted}
        span 
          a(href='#{item.url}') link
    hr
    //if w.armory
    //  #{JSON.stringify(w.armory)}
    each hist in h
      div CHANGE: #{fmtdate(hist.lastModified)} : #{JSON.stringify(hist.whats_changed)}
    hr
    // #{JSON.stringify(w)} 