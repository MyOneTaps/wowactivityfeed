    // Delete everything in this .container and get started on your own site!
    header
      .header_block
        if locales
            nav.header_langs
              ul.header_langs
                each locale in locales
                    li(title="#{locale.substring(3,5).toLocaleUpperCase()}")
                        if locale == i18n_locale()
                            span.current_locale #{locale.substring(0,2).toLocaleUpperCase()}
                        else
                            a(href=root_url+locale) #{locale.substring(0,2).toLocaleUpperCase()}
        nav.head_nav
          ul.mainmenu
            li
              a(href='/everyone/'+i18n_locale()) #{i18n("All Updates")}
            li
              a(href='/maxlevels/'+i18n_locale()) #{i18n("Max Levels!")}
